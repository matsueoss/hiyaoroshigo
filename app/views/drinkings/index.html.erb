<h1>Drinkings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinkings.each do |drinking| %>
      <tr>
        <td><%= link_to 'Show', drinking %></td>
        <td><%= link_to 'Edit', edit_drinking_path(drinking) %></td>
        <td><%= link_to 'Destroy', drinking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

